---
import { Icon } from "astro-icon";

const certificatesInfo = [
  {
    name: "Version Control",
    by: "Meta",
    date: "November, 2022",
    url: "https://www.coursera.org/account/accomplishments/verify/8GP2WXFCJV3E",
    delay: "150",
  },
  {
    name: "React Basics",
    by: "Meta",
    date: "October, 2022",
    url: "https://www.coursera.org/account/accomplishments/verify/WPF9UYHN4TJR",
    delay: "300",
  },
  {
    name: "Interactivity with JavaScript",
    by: "University of Michigan",
    date: "November, 2021",
    url: "https://www.coursera.org/account/accomplishments/verify/RT4SBZPDJXPQ",
    delay: "450",
  },
  {
    name: "HTML & CSS",
    by: "IBM",
    date: "June, 2021",
    url: "https://www.credly.com/badges/a7802cad-43af-4530-9b61-8705d214fed5",
    delay: "150",
  },
  {
    name: "Responsive Web Design",
    by: " free Code Camp",
    date: "June, 2021",
    url: "https://www.freecodecamp.org/certification/kareemagdyy/responsive-web-design",
    delay: "300",
  },
  {
    name: "CSS - The Complete Guide 2021",
    by: "Academind",
    date: "April, 2021",
    url: "https://www.udemy.com/certificate/UC-3f36e23f-1896-4eeb-b6e3-82b3cdd189b3/",
    delay: "450",
  },
  {
    name: "Front End Development Track",
    by: "Udacity",
    date: "March, 2021",
    url: "https://drive.google.com/file/d/1COHu7UK0VouAo7uzxlqDW_DURFsKuhIN/",
    delay: "150",
  },
  {
    name: "Front-End Web UI Frameworks and Tools",
    by: "HKUST",
    date: "February, 2021",
    url: "https://www.coursera.org/account/accomplishments/verify/WZPJ8YT2CNVX",
    delay: "300",
  },
];
---

<section class='certificates'>
  <div class='achievements py-5' id='services'>
    <div class='container py-lg-5'>
      <h5 class='title-small text-center' data-aos='fade-in'>
        My achievements
      </h5>
      <h3 class='title-big text-center mb-sm-5 mb-4' data-aos='fade-in'>
        Certificates
      </h3>
      <div class='row'>
        {
          certificatesInfo.map((item) => {
            return (
              <div
                class='col-sm-6  col-lg-4 item'
                data-aos='fade-in'
                data-aos-delay={item.delay}
              >
                <div class='card'>
                  <div class='box-wrap'>
                    <h4>
                      <a href={item.url} target='_blank'>
                        {item.name}
                      </a>
                    </h4>
                    <div class='from d-flex align-items-center mt-1'>
                      <Icon name='uil:university' size='16' />
                      <p class='ml-2'>{item.by}</p>
                    </div>
                    <div class='from d-flex align-items-center mt-2'>
                      <Icon name='ic:twotone-calendar-month' size='16' />
                      <p class='ml-2'>{item.date}</p>
                    </div>
                    <div class='from d-flex align-items-center mt-2'>
                      <Icon name='ph:link-bold' size='16' />
                      <a href={item.url} target='_blank' class='ml-2'>
                        See credential
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  .certificates .card {
    border: none;
    background: none;
  }

  @media (min-width: 576px) {
    .certificates .box-wrap {
      min-height: 250px;
    }
  }

  .certificates .box-wrap {
    padding: 30px;
    transition: all 0.5s ease 0s;
    border-radius: var(--border-radius);
    background-color: var(--bg-light);
    position: relative;
    margin-bottom: 20px;
    border: 1px solid var(--bg-light);
  }

  .certificates .box-wrap:hover {
    background: var(--bg-color);
    border: 1px solid var(--border-color);
  }

  .certificates .box-wrap:hover h4.number {
    opacity: 0.2;
    transition: 0.3s ease-in-out;
  }

  .certificates .box-wrap img {
    max-width: 55px;
    display: block;
    margin: 0 auto;
  }

  .certificates .from svg {
    color: var(--primary-color);
  }

  .certificates .from p,
  .certificates .from a {
    color: var(--font-color);
    font-size: 1rem;
  }

  .certificates .box-wrap h4 a {
    font-size: 24px;
    font-weight: 600;
    margin-top: 0;
    margin-bottom: 15px;
    display: block;
    color: var(--heading-color);
  }

  .certificates .box-wrap h4 a:hover {
    color: var(--primary-color);
  }

  .certificates a.read {
    font-size: 17px;
    padding: 0;
    border-bottom: 2px solid var(--primary-color);
    color: var(--heading-color);
    transition: 0.3s ease-in-out;
    font-weight: 600;
    border-radius: 0;
    margin-top: 20px;
    display: inline-block;
    text-transform: capitalize;
  }

  .certificates a.read:hover {
    color: var(--primary-color);
  }

  .certificates h4.number {
    position: absolute;
    font-size: 60px;
    line-height: 60px;
    right: 40px;
    top: 30px;
    opacity: 0.07;
    transition: 0.3s ease-in-out;
  }

  .certificates .box-wrap p {
    margin: 0;
  }

  .certificates p.sample a {
    color: var(--heading-color);
    font-size: 1.1em;
  }

  .certificates p.sample a:hover {
    color: var(--primary-color);
  }

  @media only screen and (max-width: 384px) {
    .certificates .box-wrap {
      padding: 35px 25px;
    }
  }
  .achievements .box-wrap {
    margin-bottom: 30px;
  }

  .achievements .box-wrap h4 a {
    font-size: 28px;
    line-height: 34px;
    color: var(--heading-color);
    font-weight: 500;
    display: inline-block;
    margin-bottom: 10px;
  }

  @media only screen and (max-width: 384px) {
    .box-wrap {
      padding: 35px 25px;
    }
    .achievements .box-wrap h4 a {
      font-size: 25px;
    }
  }
</style>
