---
import { Icon } from "astro-icon";
---

<button id='movetop' title='Go to top'>
  <Icon name='ph:arrow-bend-left-up' size={24} color='#fff' />
</button>
<style>
  #movetop {
    transform: translateX(100px);
    position: fixed;
    bottom: 40px;
    right: 15px;
    z-index: 99;
    font-size: 24px;
    border: none;
    outline: none;
    cursor: pointer;
    color: #fff;
    width: 40px;
    height: 40px;
    background: var(--primary-color);
    padding: 0;
    line-height: 36px;
    border-radius: 0.25rem;
    transition: 0.3s ease-out;
  }
  #movetop:hover {
    transform: translate3d(0, -5px, 0);
    -webkit-transform: translate3d(0, -5px, 0);
    transition: 0.3s ease-out;
  }
</style>
